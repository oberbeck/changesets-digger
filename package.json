{
  "name": "changesets-digger",
  "version": "0.1.0",
  "description": "Git-native changelog generation from changeset history and git tags",
  "bin": {
    "changesets-digger": "bin/changesets-digger",
    "cdig": "bin/changesets-digger"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build",
    "format": "prettier --write \"**/*.{ts,js,mjs,md,json}\"",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "vitest run --config vitest.config.integration.mjs",
    "test:unit": "vitest run --config vitest.config.mjs",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "changelog",
    "changesets",
    "git",
    "release-notes",
    "versioning"
  ],
  "author": {
    "name": "oberbeck",
    "url": "https://github.com/oberbeck"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/oberbeck/changesets-digger.git"
  },
  "homepage": "https://github.com/oberbeck/changesets-digger",
  "bugs": {
    "url": "https://github.com/oberbeck/changesets-digger/issues"
  },
  "engines": {
    "node": ">=22.19.0"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "semver": "^7.7.2"
  },
  "files": [
    "dist",
    "bin",
    "README.md"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@types/semver": "^7.7.1",
    "prettier": "3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
